<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Account"
                android:drawableBottom="@drawable/admin"
                android:paddingBottom="22dp"
                android:textColor="@color/white"
                android:background="@color/pink"
                android:layout_margin="2dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="SUBJECT CHOICE"

                android:drawableBottom="@drawable/subject"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_margin="2dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="profile"
                android:drawableBottom="@drawable/profile"
                android:paddingBottom="22dp"
                android:textColor="@color/white"
                android:background="@color/darkPurple"
                android:layout_margin="2dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="SHOW RESULT"
                android:drawableBottom="@drawable/resultt"
                android:paddingBottom="8dp"
                android:textColor="@color/white"
                android:background="@color/Blue"
                android:layout_margin="2dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="delete"
                android:drawableBottom="@drawable/delete"
                android:paddingBottom="22dp"
                android:textColor="@color/white"
                android:background="@color/Red"
                android:layout_margin="2dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:drawableBottom="@drawable/aboutt"
                android:paddingBottom="22dp"
                android:text="ABOUT"
                android:textColor="@color/white"
                android:background="@color/Yellow"
                android:layout_margin="2dp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>